<section pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center>
  <p class="lead">
    Первый в мире  удобный менеджер флеш-карточек. Именно так.
  </p>

  <%= simple_form_for(:flash_cards, url: "flash_cards/create", html: { class: 'form-group' }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :translated_text, label: 'Оригинальный вариант', value: "fefef", hint: 'You cannot change your username.' %>
    <%= f.input :test, label: 'Test',as: 'hidden', input_html: { value: "#{@cards[0].translated_text}"} %>
    <%= f.button :submit, class: "btn-primary" %>
  <% end %>
<%= @cards.methods %>
</section>
