<h1><%= t('.header') %></h1>
<%= form_tag sessions_path, method: :post do %>
  <div class="form-group">
    <%= label_tag t('.email') %>
    <%= email_field_tag :email, nil, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag t('.password') %>
    <%= password_field_tag :password, nil, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag t('.remember_me') %>
    <%= check_box_tag :remember_me %>
  </div>

  <%= submit_tag t('.log_in'), class: 'btn btn-primary btn-lg' %>
<% end %>
