<%= simple_form_for(@user, html: { class: 'form-group' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :email, label: 'email' %>
  <%= f.input :password, label: 'password' %>
  <%= f.input :password_confirmation, label: 'password_confirmation' %>
  <%= f.button :submit, "Register", class: "btn-primary" %>
  <%= f.button :button, "Clear", type: "reset", class: "btn-outline-secondary" %>
<% end %>
