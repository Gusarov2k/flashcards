<%= simple_form_for( @card, html: { class: 'form-group', multipart: true }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :original_text %>
  <%= f.input :translated_text %>
  <%= (f.input :review_date) if @card.persisted? %>
  <%= f.collection_select(:pack_id, @packs, :id, :name) %> <br>
  <%= image_tag(@card.image) if @card.image? %>
  <%= f.file_field :image %> <br>
  <%= image_tag(@card.image_url) if @card.image? %>
  <%= f.label :remote_image_url %> <br>
  <%= f.text_field :remote_image_url %> <br>
  <%= f.button :submit, t('simple_form.card.common.cr_card', action: @card.new_record? ? 'Создать' : 'Изменить'), class: "btn-primary" %>
<% end %>
