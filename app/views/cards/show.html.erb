<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Оригинальный текст</th>
        <th scope="col">Перевод</th>
        <th scope="col">Дата обзора</th>
        <th scope="col">Редактировать</th>
        <th scope="col">Домой</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @card.original_text %></td>
          <td><%= @card.translated_text %></td>
          <td><%= @card.review_date.to_formatted_s(:rfc822) %></td>
          <td><%= link_to 'Edit', edit_card_path %></td>
          <td><%= link_to 'Back', cards_path %></td>
        </tr>
    </tbody>
  </table>
</div>
